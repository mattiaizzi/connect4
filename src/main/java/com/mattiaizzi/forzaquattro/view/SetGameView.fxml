                  <Label text="Modalità">
                     <VBox.margin>
                        <Insets bottom="40.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Difficoltà">
                     <VBox.margin>
                        <Insets bottom="40.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Dimensioni">
                     <VBox.margin>
                        <Insets bottom="25.0" />
                     </VBox.margin>
                  </Label>
                  <ColorPicker fx:id="colorP1">
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </ColorPicker>
                  <ColorPicker fx:id="colorP2" />
               </children>
